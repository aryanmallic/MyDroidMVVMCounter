<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>

        <variable
            name="eventHandler"
            type="com.example.mvvmex.ui.creteTodo.CreateTodoViewModel.CreateTodo" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="com.example.mvvmex.ui.creteTodo.CreateTodoActivity">



    <EditText
        android:id="@+id/activity_create_todo_etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Header" />

    <EditText
        android:id="@+id/activity_create_todo_etContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Content" />

    <Button
        android:id="@+id/activity_create_todo_btSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onSave"
        android:text="save" />

        <!--  android:onClick="@{eventHandler::createNewTodo}"-->

    </LinearLayout>
</layout>
